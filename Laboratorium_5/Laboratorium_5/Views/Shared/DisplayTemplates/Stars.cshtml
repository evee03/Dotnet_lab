@model int

@{
    var filledStars = Model;  
    var emptyStars = 5 - filledStars; 
}

<span title="@($"{Model} / 5")" style="font-size: 1.5rem; color: gold;">
    @for (int i = 0; i < filledStars; i++)
    {
        @Html.Raw("&#x2605;")
    }
    @for (int i = 0; i < emptyStars; i++)
    {
        @Html.Raw("&#x2606;")
    }
</span>
